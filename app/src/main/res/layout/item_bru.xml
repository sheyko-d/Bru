<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_marginEnd="4dp"
                android:layout_marginLeft="-16dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="-16dp"
                android:layout_marginTop="2dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/bru" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    fontPath="fonts/Roboto-Bold.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    tools:ignore="MissingPrefix"
                    tools:text="ALTER EGO" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/content"
                        fontPath="fonts/Roboto-Medium.ttf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp"
                        tools:ignore="MissingPrefix"
                        tools:text="American IPA - 6.8% ABV" />

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        tools:ignore="MissingPrefix"
                        tools:text="Rating: 8.5" />
                </LinearLayout>

                <RatingBar
                    android:id="@+id/rating_bar"
                    style="@style/BruRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="10dp"
                    android:numStars="10"
                    android:stepSize="0.1"
                    tools:rating="8.6" />

                <TextView
                    android:id="@+id/my_rating"
                    fontPath="fonts/Comfortaa-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8.5dp"
                    android:includeFontPadding="false"
                    android:textColor="@color/orange"
                    android:textSize="34sp"
                    android:visibility="gone"
                    tools:ignore="MissingPrefix"
                    tools:text="6.5" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            tools:text="What we did here is we took a whole bunch of Mosaic and Amarillo hops, a classic punch of citrus purveying goodnes, â€¦" />
    </LinearLayout>
</FrameLayout>